@helper Commentator(int number)
{
    if (number % 10 == 1 && number % 100 != 11)
    {
        @:@SideNotes.Resources.InclineService.Commentator
    }
    else
    {
        var i = number % 10;
        var ii = number % 100;
        if (i > 1 && i < 5 && ii != 11 && ii != 12 && ii != 13 && ii != 14)
        {
            @:@SideNotes.Resources.InclineService.Commentators1
        }
        else
        {
            @:@SideNotes.Resources.InclineService.Commentators2
        }
    }
}

