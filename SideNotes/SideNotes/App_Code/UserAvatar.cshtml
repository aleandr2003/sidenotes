@using SideNotes.Models;
@using SideNotes.Services

@helper Tiny(User user, string imageClass, string id = null)
{
    if(user != null){
        string url = user.Avatar != null && user.Avatar.Tiny != null ? VirtualPathUtility.ToAbsolute(user.Avatar.Tiny.Url) : UserAvatarService.NoAvatarTiny;
	    string alt = user.Name;
        <img src="@url" alt="@alt" class="@imageClass" @(id != null ? "id=\"" + id + "\"" : "") title="@alt"/>
    }
}

