@model List<User>
@{
    Layout = null;
}

@if (@Model.Count > 0)
{
    int rowWidth = 4;
    int currentColumn = 1;
    <table>
        <tr>
            @foreach (var user in Model)
            {
                if (currentColumn > rowWidth)
                {
                    currentColumn = 1;
                    @:</tr><tr>
                }else{
                    currentColumn++;
                }
                <td>
                    @UserAvatar.Small(user, "user_avatar")
                </td>
            }
        </tr>
    </table>
}
else { 
    <span>@SideNotes.Resources.Comment.CommentatorsListNoCommentsMessage</span>
}
