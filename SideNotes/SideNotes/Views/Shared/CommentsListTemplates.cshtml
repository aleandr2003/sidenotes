<form action="@Url.Action("AddHead", "Comment")" method="post" class="ajaxForm reloadable errorable addHeadCommentFormTemplate" style="display:none">
        <input type="hidden" name="entityId" class="inputEntityId"/>
        <input type="hidden" name="entityType" class="inputEntityType"/>
	    <textarea name="commentText" class="requiredField newCommentTextArea"></textarea>
        <br/>
        <div class="commentBoxBottomLine" id="commentBoxSubmitLine">
            <input type="hidden" name="isPrivate"/>
            <input type="submit" class="submitButton" value="@SideNotes.Resources.Shared.CommentsListTemplatesSayButtonText" />
            <div class="SNLoginBox" style="display:none;">
                <label>@SideNotes.Resources.Shared.CommentsListTemplatesProfileFieldName:</label>
                <div class="SNLoginForm">
                    <input type="image" src="@Url.Content("~/Content/img/logo/facebook-16.gif")" action="@Url.Action("PostComment", "FacebookLogin", null)" alt="Facebook" class = "socialNetworkLogo"/>
                </div>
                <div class="SNLoginForm">
                    <input type="image" src="@Url.Content("~/Content/img/logo/twitter-16.gif")" action="@Url.Action("PostComment", "TwitterLogin", null)" alt="Twitter" class = "socialNetworkLogo"/>
                </div>
            </div>
        </div>
        
        <div id="errorMessage" class="errorMessage"></div>
    </form>

<div class="lightbox" id="replyBox">
    <a href="#" class="lightbox_close">x</a>
    <div class="AddNewCommentFormContainer">
        <h2>@SideNotes.Resources.Shared.CommentsListTemplatesReplyHeading</h2>
        <form method="post" action="@Url.Action("AddComment", "Comment")" 
            class="AddNewCommentForm ajaxForm errorable" id="replyForm">
            <input type="hidden" name="headCommentId" value="" class="inputHeadCommentId"/>
            <input type="hidden" name="entityId" value="" class="inputEntityId"/>
            <textarea class="newCommentTextArea" name="commentText"></textarea>
            <br/>
            <input type="submit" value="@SideNotes.Resources.Shared.CommentsListTemplatesSaveButtonText" class="submitButton"/>
            <div id="errorMessage" class="errorMessage"></div>
        </form>
    </div>
</div>