@using SideNotes.Extensions;
@using System.Web.Routing;
@{
    Layout = null;
}
<div class="lightbox" id="addBookmarkBox">
    <a href="#" class="lightbox_close">x</a>
    <h2>@SideNotes.Resources.Book.AddBookmarkHeading</h2>
    <form method="post" action="@Url.Action("AddBookmark", "Book")"
          class="ajaxForm errorable closable" id="addBookmarkBoxForm">
        <input type="hidden" name="paragraphId" class="bookmarkParagraphId" />
        @SideNotes.Resources.Book.AddBookmarkTitleFieldName: <input type="text" name="name" class="requiredField bookmarkName" />
        @Html.SubmitButton(null, SideNotes.Resources.Book.AddBookmarkSubmitButtonText, new { @class = "submitButton" })
    </form>
</div>
<script type="text/javascript">
    $(function () {
        $('#addBookmarkBoxForm')[0].success = function () {
            initFrame('bookmarksFrame');
            $('#lightbox_shadow').click();
        };
    });
</script>