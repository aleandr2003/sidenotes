@model List<Book>
@{
    Layout = null;
}
@if (Model.Count > 0)
{
    <ul class="book_list" id="nowReadList">
    @foreach (var book in Model)
    {
    	<li class="book book_item nowReadList_item">
			<a href="@Url.Action("Start", "Book", new { id = book.Id })" class="book_cover_link">
				@BookAvatar.Medium(book, "book_cover")
			</a>
		</li>    
    }
    </ul>
}