@model User
@{
    Layout = null;
}
<div class="lightbox" id="setAvatarBox">
    <a href="#" class="lightbox_close">x</a>
    <h2>@SideNotes.Resources.User.SetAvatarBoxHeading</h2>
@using (Html.BeginForm<UserController>(x => x.SetAvatar(Model.Id, null, null), FormMethod.Post,
    new { enctype = "multipart/form-data", id = "setAvatarBoxForm" }))
  {
        <input type="file" name="file" class="requiredField"/>
		@Html.SubmitButton(null, SideNotes.Resources.User.SetAvatarBoxUploadButtonText, new { @class = "submitButton" })
  }
</div>
