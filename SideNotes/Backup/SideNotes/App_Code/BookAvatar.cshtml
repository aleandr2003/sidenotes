@using SideNotes.Models;
@using SideNotes.Services;

@helper Small(Book book, string imageClass, string id = null)
{
    if (book != null)
    {
        string url = book.Avatar != null && book.Avatar.Small != null ? VirtualPathUtility.ToAbsolute(book.Avatar.Small.Url) : BookAvatarService.NoAvatarSmall;
        string alt = book.Title;
        <img src="@url" alt="@alt" class="@imageClass" @(id != null ? "id=\"" + id + "\"" : "") title="@alt"/>
    }
}

