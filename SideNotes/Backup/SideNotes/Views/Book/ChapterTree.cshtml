@model Chapter
@{
    Layout = null;
}

@if (Model.TopParagraph != null)
{
    @Html.ActionLink(Model.Title, "View", "Book",
        new { id = Model.Book_Id, skip = Model.TopParagraph.OrderNumber - 1 },
            new { @class = "chapterTreeLink" })
    if (Model.HeadCommentsCount > 0)
    {
        <span class="commentCounter_counter">@Model.HeadCommentsCount</span>
    }
}
@if (Model.ChildChapters.Count > 0)
{
    <ul class="chapterTreeSection">
    @foreach (var child in Model.ChildChapters)
    {
        <li class="chapterTreeItem">@Html.Partial("ChapterTree", child)</li>
    }
    </ul>
}